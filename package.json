{
  "name": "mission-control",
  "version": "1.0.0",
  "description": "Mission Control for AI Agent Squad",
  "private": true,
  "workspaces": [
    "backend",
    "frontend",
    "shared"
  ],
  "scripts": {
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm start",
    "dev:services": "npm run dev:heartbeat & npm run dev:notifications & npm run dev:standup",
    "dev:heartbeat": "cd services/heartbeat && npm run dev",
    "dev:notifications": "cd services/notifications && npm run dev",
    "dev:standup": "cd services/standup && npm run dev",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build"
  },
  "devDependencies": {
    "typescript": "^5.3.3",
    "@types/node": "^20.11.0"
  }
}
